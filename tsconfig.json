{
  "compilerOptions": {
      "target": "ESNext",
      "module": "Commonjs",
      "rootDir": "src",
      "outDir": "./dist",
      "lib": ["dom", "es6", "es2015.promise"],
      "strict": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "sourceMap": false,
      "baseUrl": "./"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ],
}